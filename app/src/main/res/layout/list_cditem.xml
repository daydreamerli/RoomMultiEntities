<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cdcardView"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cd_imageview"
            android:layout_width="180dp"
            android:layout_height="160dp"
            android:src="@drawable/background" />

        <TextView
            android:id="@+id/album_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/cd_imageview"
            android:text="UDiscoverMusic"
            android:textColor="@color/greenepaper"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/singer_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/album_textview"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/cd_imageview"
            android:text="urSinger"
            android:textSize="22sp"
            android:textColor="@color/red"
            android:textStyle="bold"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>