<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateBookActivity"
    android:orientation="vertical"
    android:layout_gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Book Info to the Database"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="60dp">

        <ImageView
            android:id="@+id/updatebookImage"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/updatebookImage"
            android:layout_alignStart="@+id/updatebookImage"
            android:layout_marginStart="0dp"
            android:layout_marginTop="6dp"
            android:text="BookImage"
            android:textColor="@color/purple_200"
            android:textSize="16sp"
            android:textStyle="italic" />


        <EditText
            android:id="@+id/updateTitle"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@+id/updatebookImage"
            android:layout_toRightOf="@+id/buttonUpdate"
            android:hint="Enter The BookTitle"
            android:lines="1"
            android:textSize="22sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/updateAuthor"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/updateTitle"
            android:layout_gravity="center"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/updatebookImage"
            android:hint="Enter The BookAuthor"
            android:lines="1"
            android:textSize="22sp" />

        <Button
            android:id="@+id/buttonUpdate"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@+id/updatebookImage"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="39dp"
            android:backgroundTint="@android:color/darker_gray"
            android:text="Update Info" />

        <Button
            android:id="@+id/buttoncancleUpdate"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@+id/updateAuthor"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="36dp"
            android:backgroundTint="@android:color/darker_gray"
            android:text="Cancle Update" />


    </RelativeLayout>

</LinearLayout>